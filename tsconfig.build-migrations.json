{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "outDir": "./dist_migrations",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "dist_migrations",
    "**/*spec.ts",
    "__test__/*",
    "__generators__/*",
    "__mocks__/*",
    "src"
  ]
}
